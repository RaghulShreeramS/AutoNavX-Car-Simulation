<?xml version="1.0"?>
<robot name="simple_plane">
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1000 1000 0.01"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/> <!-- Set color to black -->
        <specular rgba="0 0 0 1"/> <!-- Set specular reflection to zero -->
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1000 1000 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>
</robot>
